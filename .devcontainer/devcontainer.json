// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python 3",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/python:2-3.11-bookworm",
	"features": {
		"ghcr.io/devcontainer-community/devcontainer-features/astral.sh-uv:1": {},
		"ghcr.io/devcontainers/features/node:1": {}
	},
	// Setup for Podman non-root user:
	// --- START ---
	"remoteUser": "vscode",
	"containerUser": "vscode",
	"updateRemoteUserUID": false,
	"runArgs": [
		"--userns=keep-id:uid=1000,gid=1000",
		"--mount=type=tmpfs,destination=/tmp,tmpfs-mode=1777"
	],
	// --- END ---
	// Install OpenCode CLI
	"postCreateCommand": "curl -fsSL https://opencode.ai/install | bash"
}